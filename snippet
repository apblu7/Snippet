import org.springframework.web.client.ResourceAccessException;
import java.net.SocketTimeoutException;
import java.net.ConnectException;
import java.net.UnknownHostException;

String resultMsg = "";

try {
    // HTTP request or network operation
} catch (ResourceAccessException ex) {
    Throwable cause = ex.getCause(); // Check the underlying exception
    
    // Handle SocketTimeoutException
    if (cause instanceof SocketTimeoutException) {
        resultMsg = "Timeout: Server did not respond in time.";
    }
    // Handle ConnectException
    else if (cause instanceof ConnectException) {
        resultMsg = "Connection failed: Unable to connect to the server.";
    }
    // Handle UnknownHostException
    else if (cause instanceof UnknownHostException) {
        resultMsg = "Unknown host: Cannot resolve the server address.";
    }
    // Handle other network-related exceptions
    else {
        resultMsg = "Network error: " + cause.getMessage();
    }
}