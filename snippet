@Component
public class ResponseCodeUtil {

    private static Properties props;

    @Autowired
    public ResponseCodeUtil(@Qualifier("responseCodeProperties") Properties injectedProps) {
        ResponseCodeUtil.props = injectedProps;
    }

    public static String get(String key) {
        return props.getProperty(key, key); // 기본값은 키 자체 반환
    }
}