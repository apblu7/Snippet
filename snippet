@echo off
setlocal

set PROJECT_NAME=ets_test
set SERVER=ubuntu@10.110.30.50
set KEY_PATH=%~dp0\server_key.ppk
set WAR_FILE=%PROJECT_NAME%.war
set REMOTE_DIR=/home/ubuntu

echo [INFO] Uploading "%~dp0\target\%WAR_FILE%" to %SERVER%:%REMOTE_DIR% ...

"C:\HUNESION\i-oneNGS\WinSCP.exe" /console ^
  /command ^
  "open sftp://%SERVER%/ -privatekey=""%KEY_PATH%""" ^
  "put ""%~dp0\target\%WAR_FILE%"" ""%REMOTE_DIR%/""" ^
  "exit"

set ERRORLEVEL=%ERRORLEVEL%
if %ERRORLEVEL% neq 0 (
    echo [ERROR] Upload failed with exit code %ERRORLEVEL%
    pause
    exit /b %ERRORLEVEL%
)

echo [INFO] Upload succeeded.
pause
exit /b 0