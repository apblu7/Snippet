import com.fasterxml.jackson.databind.ObjectMapper;
import lombok.RequiredArgsConstructor;
import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Service;
import org.springframework.web.client.RestTemplate;
import com.example.mapper.SckbdInfoMapper;

import java.util.List;
import java.util.Map;

@Service
@RequiredArgsConstructor
public class SckbdInfoService {
    private final RestTemplate restTemplate;
    private final SckbdInfoMapper sckbdInfoMapper;
    private final ObjectMapper objectMapper;

    public void fetchAndSaveSckbdInfo() {
        String apiUrl = "https://example.com/api/hospital-data"; // 실제 API URL

        // API 호출
        ResponseEntity<Object> responseEntity = restTemplate.getForEntity(apiUrl, Object.class);
        if (responseEntity.getBody() == null) {
            throw new RuntimeException("API 응답이 없습니다.");
        }

        // JSON을 Map 형태로 변환
        Map<String, Object> responseMap = objectMapper.convertValue(responseEntity.getBody(), Map.class);

        // "body" → "items" → "item" 추출
        List<Map<String, Object>> items = (List<Map<String, Object>>)
                ((Map<String, Object>) ((Map<String, Object>) responseMap.get("body")).get("items")).get("item");

        // 데이터 저장 (MyBatis 호출)
        for (Map<String, Object> item : items) {
            sckbdInfoMapper.insertSckbdInfo(item);
        }
    }
}