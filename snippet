@echo off
setlocal enabledelayedexpansion

REM 1. SSH로 대상 시스템에서 UTC 날짜 조회
for /f "delims=" %%a in ('ssh -i your_key.pem user@host "date -u +%%F"') do (
    set LOGDATE=%%a
)

REM 2. 확인 출력 (선택사항)
echo 대상 시스템 UTC 날짜: %LOGDATE%

REM 3. 해당 날짜 로그 파일 tail -f
ssh -i your_key.pem user@host "tail -f /path/to/logs/localhost_access_log.%LOGDATE%.log"