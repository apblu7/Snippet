<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <!-- MyBatis 내부 로거 조용히 만들기 -->
        <Logger name="org.apache.ibatis" level="info" additivity="false"/>
        <Logger name="org.apache.ibatis.executor" level="info" additivity="false"/>
        <Logger name="org.apache.ibatis.session" level="info" additivity="false"/>
        <Logger name="org.apache.ibatis.mapping" level="info" additivity="false"/>
        <Logger name="org.apache.ibatis.logging" level="info" additivity="false"/>

        <!-- Mapper ID가 로거 이름일 경우 끄기 (예: EtsMapperDAO) -->
        <Logger name="EtsMapperDAO" level="off" additivity="false"/>

        <!-- 전체 루트 로거는 DEBUG로 유지 -->
        <Root level="debug">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>