$batPath = "C:\HUNESION\i-oneNGS\deploy-ets.bat"
$logPath = "C:\HUNESION\i-oneNGS\deploy-ets.log"
$tailExe = "C:\Tools\SnakeTail\SnakeTail.exe"

# 기존 로그 삭제
if (Test-Path $logPath) { Remove-Item $logPath }

# 배치파일 실행 (출력 로그로 저장)
Start-Process -NoNewWindow -FilePath "cmd.exe" -ArgumentList "/c `"$batPath >> $logPath 2>>&1`""

# SnakeTail 로그 모니터링 시작
Start-Process $tailExe -ArgumentList "-f", "$logPath"